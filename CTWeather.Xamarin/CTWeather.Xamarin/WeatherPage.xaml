                                <Label Text="{Binding Visibility, Mode=OneWay}" Style="{DynamicResource TextSubhead}" />
                            </StackLayout>
                        </Grid>-->
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <!--<admob:MTAdView AdsId=""/> AdMob banner key-->
        </StackLayout>
    </ContentPage.Content>
</ContentPage>